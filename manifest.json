{
    "manifest_version": 3,
    "name": "Tab Tree Visualizer",
    "version": "1.0",
    "description": "Visualize your tab relationships in a tree structure",
    "permissions": [
        "tabs",
        "webNavigation",
        "storage",
        "sidePanel"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Toggle Side Panel"
        }
    }
}